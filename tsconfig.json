{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": [
    "**/__tests__/*"
  ]
}